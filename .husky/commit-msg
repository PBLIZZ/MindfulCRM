# Conventional commit message format validation
commit_regex='^(feat|fix|docs|style|refactor|test|chore|security|perf|build|ci|revert)(\(.+\))?: .{1,50}'

if ! grep -qE "$commit_regex" "$1"; then
    echo "❌ Invalid commit message format!"
    echo ""
    echo "Commit message should follow conventional commits format:"
    echo "  <type>[optional scope]: <description>"
    echo ""
    echo "Types: feat, fix, docs, style, refactor, test, chore, security, perf, build, ci, revert"
    echo ""
    echo "Examples:"
    echo "  feat: add user authentication"
    echo "  fix(auth): resolve login redirect issue"
    echo "  security: implement CSRF protection"
    echo "  docs: update API documentation"
    echo ""
    exit 1
fi

echo "✅ Commit message format is valid!"
