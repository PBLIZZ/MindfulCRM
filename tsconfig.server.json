{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "composite": true,
    "jsx": "preserve"
  },
  "include": [
    "server",
    "shared",
    "types",
    "scripts",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "client"
  ]
}
